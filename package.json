{
  "name": "ecommerce-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "format": "prettier --write ./src",
    "ci:format": "prettier --check ./src",
    "test": "vitest",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:types": "tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@commercetools/platform-sdk": "^7.8.0",
    "@commercetools/sdk-auth": "^4.0.1",
    "@commercetools/sdk-client": "^3.0.0",
    "@commercetools/sdk-client-v2": "^2.5.0",
    "@commercetools/sdk-middleware-http": "^7.0.4",
    "@hookform/error-message": "^2.0.1",
    "isomorphic-fetch": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.4",
    "react-router-dom": "^6.23.0",
    "react-slick": "^0.30.2",
    "react-toastify": "^10.0.5",
    "slick-carousel": "^1.8.1",
    "swiper": "^11.1.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.6",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-slick": "^0.23.13",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "sass": "^1.76.0",
    "typescript": "^5.5.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "validate-branch-name": {
    "pattern": "(config|feat|fix|refactor|docs|chore)/RSS-ECOMM-\\d+-\\d+_\\w+",
    "errorMsg": "Branch name is invalid"
  }
}
