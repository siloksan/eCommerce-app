{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDirs": [
      "src",
  ],
  "lib": [
      "dom",
      "esnext"
  ],

  "typeRoots": [
      "node_modules/@types",
  ],
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["webpack-env", "node"],
    "plugins": [
        {
            "name": "typescript-plugin-css-modules",
            "options": {
                "customTemplate": "./customTemplate.js"
            }
        }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "webpack.*.js",
    "*.config.js",
    "**/*.test.ts*"
  ]
}